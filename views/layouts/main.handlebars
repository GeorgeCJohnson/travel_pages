                class="nav-item nav-link active"
                role="button"
                href="/discover"
                data-toggle="tooltip"
                data-placement="top"
                title="Discover"
              >
                <!-- DISCOVER ICON / navigates to discover_page.handlebars -->
                <i class="bi bi-compass navIcon"></i>
              </a>
            {{/unless}}
            {{#if user.isLoggedIn}}
