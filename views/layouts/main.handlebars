              <a
                class="nav-item nav-link active"
                role="button"
                href="/discover"
                data-toggle="tooltip"
                data-placement="top"
                title="Discover"
              >
                <!-- DISCOVER ICON / navigates to discover_page.handlebars -->
                <i class="bi bi-compass navIcon"></i>
              </a>
              <a
                class="nav-item nav-link active"
                href="/pins/user"
                data-toggle="tooltip"
                data-placement="top"
                title="Pins"
              >
                <!-- PROFILE ICON / navigates to edit_profile.handlebars -->
                <i class="bi bi-pin-angle-fill navIcon"></i>
              </a>
