                  class="nav-item nav-link active dropdown-toggle user-avatar"
                  href="#"
                  role="button"
                  id="user-profile-pic"
                  data-bs-toggle="dropdown"
                  data-toggle="tooltip"
                  title="Profile"
                  aria-expanded="false"
                  width="50px"
                />
                <a
                  class="nav-item nav-link active dropdown-toggle"
                  href="#"
                  role="button"
                  id="user-username"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                ></a>
                <ul class="dropdown-menu" aria-labelledby="user-username">
                  <li><a
                      class="dropdown-item"
                      href="/editprofile"
                    >Settings</a></li>
                  <li><a
                      class="dropdown-item"
                      id="logout-btn"
                      href="/logout"
                    >Logout</a></li>
                </ul>
              </div>
            {{/if}}
            <div class="form-check form-switch" id="toggle-switch">
              <input
                class="form-check-input"
                type="checkbox"
                role="switch"
                id="flexSwitchCheckDefault"
